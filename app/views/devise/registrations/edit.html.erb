<div class="container d-flex justify-content-center align-items-center" style="min-height: 80vh;">
  <div class="card shadow-lg p-4" style="max-width: 450px; width: 100%;">
    <div class="card-body text-center">
      <h2 class="mb-4 text-primary fw-bold">Alterar Senha</h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="mb-3 text-start">
          <%= f.label :email, class: "form-label fw-semibold" %>
          <%= f.email_field :email, class: "form-control", autofocus: true, autocomplete: "email" %>
        </div>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div class="alert alert-info">
            Currently waiting confirmation for: <%= resource.unconfirmed_email %>
          </div>
        <% end %>

        <div class="mb-3 text-start">
          <%= f.label :senha, class: "form-label fw-semibold" %>
          <small class="text-muted">(Insira nova senha)</small>
          <%= f.password_field :password, class: "form-control", autocomplete: "new-password" %>
          <% if @minimum_password_length %>
            <small class="text-muted d-block">mínimo de <%= @minimum_password_length %> caracteres</small>
          <% end %>
        </div>

        <div class="mb-3 text-start">
          <%= f.label :confirmar_senha, class: "form-label fw-semibold" %>
          <%= f.password_field :password_confirmation, class: "form-control", autocomplete: "new-password" %>
        </div>

        <div class="mb-3 text-start">
          <%= f.label :senha_atual, class: "form-label fw-semibold" %>
          <small class="text-muted">(Necessário para confirmar alterações)</small>
          <%= f.password_field :current_password, class: "form-control", autocomplete: "current-password" %>
        </div>

        <div class="d-grid gap-2">
          <%= f.submit "Atualizar dados", class: "btn btn-custom fw-semibold" %>
        </div>
      <% end %>

      <hr class="my-4">

      <h3 class="text-danger fw-bold">Cancelar conta</h3>
      <p class="text-muted">Insatisfeito(a)? Você pode excluir permanentemente sua conta.</p>
      <%= button_to "Cancelar", registration_path(resource_name),
            class: "btn btn-outline-danger fw-semibold",
            data: { confirm: "Tem certeza desta ação?", turbo_confirm: "Tem certeza?" },
            method: :delete %>

      <div class="mt-3">
        <%= link_to "Voltar", :back, class: "text-decoration-none text-muted" %>
      </div>
    </div>
  </div>
</div>
