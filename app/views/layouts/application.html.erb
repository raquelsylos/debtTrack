<!-- application.html.erb -->
<!DOCTYPE html>
<html>
  <head>
    <title>DebtTrack</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <div class="container">
        <a class="navbar-brand" href="/">
          <%= image_tag "logo.png", alt: "Logo", width: 75, height: 75, class: "d-inline-block align-top" %>
        </a>

        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav ms-auto">
            <% if user_signed_in? %>
              <li class="nav-item">
                <span class="nav-link">Ol√°, <%= current_user.name %>!</span>
              </li>
              <li class="nav-item">
                <%= form_tag(destroy_user_session_path, method: :delete) do %>
                  <%= submit_tag "Logout", class: "nav-link btn btn-link" %>
                <% end %>
              </li>
            <% else %>
              <li class="nav-item">
                <%= link_to "Login", new_user_session_path, class: "nav-link" %>
              </li>
            <% end %>
          </ul>
        </div>
      </div>
    </nav>

    <div class="hero-section">
      <div class="hero-banner">
        <div class="container">
          <div class="banner-content text-center">
            <h1>Organize and visualize your bills in one place</h1>
            <p class="lead mb-4">Take control of your finances today</p>
            <%= link_to "GET STARTED", new_user_registration_path, class: "btn btn-light btn-lg" %>
          </div>
        </div>
      </div>
    </div>

    <main class="container my-4">
      <%= yield %>
    </main>

    <footer class="footer mt-auto py-3 bg-dark">
      <div class="container text-center text-white">
        <small>&copy; <%= Time.current.year %> DebtTracker. All rights reserved.</small>
      </div>
    </footer>
  </body>
</html>
